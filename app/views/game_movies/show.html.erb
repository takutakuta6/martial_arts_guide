<div id="game-movie-show-wrapper">
  <% @game_comments.each do |comment| %>
    <div class="comment-color d-flex">
      <span class="example-position"><%= comment.position %>.</span>
      <div class="w-100">
        <%=  comment.content %>
      </div>
      <% if current_user.id == comment.user_id %>
        <%= link_to game_movie_game_comment_path(@game_movie, comment), class: "justify-content-end", method: :delete, data: { confirm: "削除しますか？" } do %>
          <i class="far fa-trash-alt" ></i>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <div class="fixed-bottom comment-style">
    <%= form_with model: [@game_movie, @game_comment], local: true do |form| %>
      <div class="form-row mx-4">
        <div class="col">
          <%= form.text_field :content, class:"form-control", required: true, maxlength: 40 %>
        </div>
        <div class="col-auto">
          <span class="submit-comment"><%= form.submit "投稿", class: "btn btn-primary" %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>
